<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/surfaceColor"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        layout="@layout/layout_toolbar"
        android:id="@+id/tb_transaction_detail"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name_value"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/material_margin"
        android:layout_marginStart="@dimen/material_margin"/>
        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chip_category"
            app:chipIcon="@drawable/ic_food"
            app:iconStartPadding="@dimen/material_margin"
            style="@style/Widget.MaterialComponents.Chip.Action"
            android:text="Food"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tb_transaction_detail"
            android:layout_marginStart="@dimen/material_margin"
            android:layout_marginTop="@dimen/material_margin"
            android:checked="true"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_amount"
        style="@style/TextAppearance.MaterialComponents.Overline"
        android:text="@string/label_amount"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@id/chip_category"
        android:layout_marginStart="@dimen/material_margin"
        android:layout_marginTop="@dimen/material_margin"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_amount_value"
        style="@style/TextAppearance.MaterialComponents.Body1"
        android:text="3,000"
        android:layout_below="@id/tv_amount"
        android:layout_alignStart="@id/tv_amount"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_date"
        style="@style/TextAppearance.MaterialComponents.Overline"
        android:text="Date"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@id/tv_amount_value"
        android:layout_alignStart="@id/tv_amount_value"
        android:layout_marginTop="@dimen/material_margin"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_date_value"
        style="@style/TextAppearance.MaterialComponents.Body1"
        android:text="20/2/2019"
        android:layout_below="@id/tv_date"
        android:layout_alignStart="@id/tv_date"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_note"
        style="@style/TextAppearance.MaterialComponents.Overline"
        android:text="@string/label_note"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@id/tv_date_value"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/material_margin"
        android:layout_marginTop="@dimen/material_margin"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_note_value"
        style="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:text="This Cost should be after the Exam"
        android:layout_marginBottom="@dimen/material_margin"
        android:layout_below="@id/tv_note"
        android:layout_alignStart="@id/tv_note"/>
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:id="@+id/btn_edit"
        android:src="@drawable/ic_edit"
        android:tint="@color/primaryColor"
        android:layout_toEndOf="@id/tv_name_value"
        android:layout_marginStart="@dimen/material_margin"
        android:layout_alignTop="@id/btn_detail_close"
        android:layout_alignBottom="@id/btn_detail_close"/>
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/btn_detail_close"
        style="@style/IconImageButton"
        android:src="@drawable/ic_close"
        android:layout_marginEnd="@dimen/material_margin"
        android:layout_marginTop="@dimen/material_margin"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"/>
</RelativeLayout>
