<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/ml_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MainActivity">

    <include layout="@layout/layout_toolbar"
        android:id="@+id/tb_home"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <ImageButton
        android:id="@+id/btn_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="@dimen/material_margin"
        android:src="@drawable/ic_menu"
        style="@style/IconImageButton"
        app:layout_constraintBottom_toBottomOf="@id/tb_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title"
        android:text="@string/label_dashboard"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_close"
        app:layout_constraintBottom_toBottomOf="@id/btn_close"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_recents"
        android:text="@string/label_recent"
        style="@style/TextAppearance.MaterialComponents.Body1"
        app:layout_constraintTop_toBottomOf="@id/cd_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginTop="@dimen/material_margin"
        android:layout_marginStart="@dimen/material_margin" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_more"
        android:text="More"
        android:layout_marginEnd="@dimen/material_small_margin"
        app:layout_constraintEnd_toStartOf="@id/btn_more"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cd_value"
        app:layout_constraintBottom_toBottomOf="@id/tv_recents"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="1"/>

    <ImageButton
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:scaleType="center"
        style="@style/IconImageButton"
        android:src="@drawable/ic_choose_more"
        android:id="@+id/btn_more"
        app:layout_constraintTop_toTopOf="@id/tv_more"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_recents"
        app:layout_constraintHorizontal_bias="1"
        android:layout_marginEnd="@dimen/material_margin"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/dv_recent"
        android:background="@android:drawable/divider_horizontal_bright"
        android:layout_marginStart="@dimen/material_margin"
        android:layout_marginEnd="@dimen/material_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/material_small_margin"
        app:layout_constraintTop_toBottomOf="@id/tv_recents"
        app:layout_constraintVertical_bias="0"
        android:visibility="invisible"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_recent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:fadeScrollbars="true"
        android:overScrollMode="never"
        android:paddingBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dv_recent"
        tools:listitem="@layout/item_cost" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fb_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/material_margin"
            android:layout_marginBottom="32dp"
            android:clickable="true"
            android:tint="@android:color/white"
            app:backgroundTint="@color/primaryColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/ic_add" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cd_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/material_margin"
        android:layout_marginEnd="@dimen/material_margin"
        android:elevation="3dp"
        app:cardBackgroundColor="@color/primaryColor"
        app:cardCornerRadius="@dimen/corner_radius"
        android:layout_marginTop="@dimen/material_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tb_home">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_value"
                style="@style/TextAppearance.MaterialComponents.Headline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/material_margin"
                android:text="30,00.00 "
                android:textColor="@color/onPrimaryColor" />

            <TextView
                android:id="@+id/textView5"
                style="@style/TextAppearance.MaterialComponents.Overline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_value"
                android:layout_toEndOf="@id/tv_value"
                android:text="mmk"
                android:textColor="@color/onPrimaryColor" />

            <com.arduia.graph.SpendGraph
                android:id="@+id/img_graph"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:padding="4dp"
                android:layout_below="@id/tv_value"
                android:layout_centerHorizontal="true"  />
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>

