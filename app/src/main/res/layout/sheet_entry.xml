<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_rounded_corner"
    android:elevation="3dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/material_margin_large"
        android:layout_marginStart="@dimen/material_margin"
        android:layout_marginEnd="@dimen/material_margin"
        android:layout_marginBottom="@dimen/material_margin_large"
        >

        <TextView
            android:id="@+id/tv_spend"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/label_spend" />

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            style="@style/IconImageButton"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/ic_close" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tvl_name"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/material_margin"
                android:layout_marginEnd="@dimen/material_margin">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/label_name"
                    android:imeOptions="actionSend"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/chip_category"
                app:singleSelection="true"
                app:singleLine="true"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_below="@id/tvl_name"
                android:layout_marginTop="@dimen/material_margin"
                android:paddingStart="@dimen/material_margin"  >
                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipCornerRadius="@dimen/corner_radius"
                    android:text="Clothes"
                    app:chipIcon="@drawable/ic_clothes"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipCornerRadius="@dimen/corner_radius"
                    android:text="Household"
                    app:chipIcon="@drawable/ic_household"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipCornerRadius="@dimen/corner_radius"
                    android:text="Food"
                    app:chipIcon="@drawable/ic_food"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipCornerRadius="@dimen/corner_radius"
                    android:text="Donation"
                    app:chipIcon="@drawable/ic_donations"/>
            </com.google.android.material.chip.ChipGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tvl_amount"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/chip_category"
                android:layout_marginStart="@dimen/material_margin"
                android:layout_marginTop="@dimen/material_margin"
                android:layout_marginEnd="@dimen/material_margin">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tv_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/label_cost"
                    android:imeOptions="actionNext|actionSend"
                    android:inputType="number"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_picture"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvl_amount"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/material_margin"
                android:layout_marginTop="@dimen/material_margin"
                android:layout_marginEnd="@dimen/material_margin"
                android:text="Pictures" />
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_picture"
                android:layout_alignParentStart="true"
                android:paddingStart="@dimen/material_margin"
                android:paddingEnd="@dimen/material_margin"
                android:clipToPadding="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/hsv_add_pic"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lnl_add_picture"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cd_add_picture"
                        style="@style/RoundedShape"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_below="@id/tv_picture"
                        android:layout_alignStart="@id/tv_picture"
                        android:layout_marginTop="@dimen/material_margin"
                        android:layout_marginBottom="@dimen/material_margin"
                        tools:ignore="ExtraText">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/label_description"
                            android:src="@drawable/ic_add" />
                    </com.google.android.material.card.MaterialCardView>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_picture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/material_margin"
                        android:layout_marginTop="@dimen/material_margin"
                        android:layout_marginBottom="@dimen/material_margin"
                        android:orientation="horizontal"
                        tools:itemCount="1"
                        tools:listitem="@layout/item_add_picture"
                        tools:orientation="horizontal" />
                </LinearLayout>
            </HorizontalScrollView>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tvl_description"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/hsv_add_pic"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/material_margin"
                android:layout_marginTop="@dimen/material_margin"
                android:layout_marginEnd="@dimen/material_margin">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:hint="@string/label_description"
                    android:imeOptions="actionSend"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvl_description"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/material_margin"
                android:layout_marginBottom="@dimen/material_margin"
                android:text="@string/label_save" />
        </RelativeLayout>
    </ScrollView>

</LinearLayout>
