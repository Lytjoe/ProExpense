<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="3dp"
    android:orientation="vertical"
    tools:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/tb_entry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_entry_title"
            style="?attr/textAppearanceHeadline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/grid_3"
            android:layout_marginTop="@dimen/grid_2"
            android:text="@string/expense_entry" />

        <TextView
            android:id="@+id/tv_date"
            style="?textAppearanceCaption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_entry_title"
            android:layout_alignStart="@id/tv_entry_title"
            tools:text="10/2/2019 2:00 PM" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btn_calendar"
            android:scaleType="center"
            android:background="?selectableItemBackgroundBorderless"
            android:layout_width="@dimen/standard_icon_size"
            android:layout_height="@dimen/standard_icon_size"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/grid_2"
            android:layout_toEndOf="@id/tv_entry_title"
            app:srcCompat="@drawable/ic_calendar" />


        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_entry_close"
            style="?attr/iconButtonStyle"
            android:layout_width="@dimen/standard_icon_size"
            android:layout_height="@dimen/standard_icon_size"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/grid_3"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/ic_close" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_date"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/grid_2"
            android:background="@android:drawable/divider_horizontal_bright" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/sv_entry"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tb_entry"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintWidth_max="@dimen/with_layout_min_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edl_name"
                style="?attr/textInputStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/grid_3"
                android:layout_marginTop="@dimen/grid_2"
                android:layout_marginEnd="@dimen/grid_3"
                android:textAlignment="viewStart">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/name"
                    android:imeOptions="actionNext"
                    android:maxLength="20"
                    android:nextFocusDown="@id/edt_amount"
                    android:singleLine="true"
                    android:textAlignment="viewStart" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edl_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edl_name"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/grid_3"
                android:layout_marginTop="@dimen/grid_3"
                android:layout_marginEnd="@dimen/grid_3">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/amount"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:nextFocusDown="@id/edt_note"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edl_cost"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/grid_3"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:paddingStart="@dimen/grid_3"
                android:paddingEnd="@dimen/grid_3"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="1"
                tools:listitem="@layout/item_category" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edl_description"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/rv_category"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/grid_3"
                android:layout_marginTop="@dimen/grid_3"
                android:layout_marginEnd="@dimen/grid_3">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_note"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:hint="@string/note"
                    android:maxLength="100"
                    android:nextFocusDown="@id/btn_save"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edl_description"
                android:layout_marginStart="@dimen/grid_3"
                android:layout_marginTop="@dimen/grid_3"
                android:layout_marginEnd="@dimen/grid_3"
                android:layout_marginBottom="@dimen/grid_3"
                android:layout_toStartOf="@id/cv_lock"
                android:text="@string/save" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_lock"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignTop="@id/btn_save"
                android:layout_alignBottom="@id/btn_save"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="@dimen/grid_3"
                android:layout_marginBottom="6dp"
                android:backgroundTint="?colorSurface"
                app:cardElevation="2dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imv_lock"
                    android:layout_width="@dimen/standard_icon_size"
                    android:layout_height="@dimen/standard_icon_size"
                    android:layout_gravity="center"
                    android:scaleType="center"
                    app:srcCompat="@drawable/ic_lock_open"
                    app:tint="?colorPrimary" />
            </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
