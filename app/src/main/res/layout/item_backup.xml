<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_margin="@dimen/margin_small_material">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_backup_name"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:text="Backup1_1341_c34.csv"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/margin_material"
            android:layout_marginTop="@dimen/margin_material"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/btn_delete"
            android:src="@drawable/ic_delete"
            style="@style/IconButton"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/margin_material"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_date"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:text="20/1/2019"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tv_backup_name"
            android:layout_marginStart="@dimen/margin_material"
            android:layout_marginTop="@dimen/margin_small_material"/>
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progress="50"
            android:id="@+id/pb_backup"
            android:progressTint="@color/primaryColor"
            android:layout_marginStart="@dimen/margin_material"
            android:layout_marginEnd="@dimen/margin_material"
            android:layout_below="@id/tv_date"
            android:layout_marginTop="@dimen/margin_small_material"
            android:layout_marginBottom="@dimen/margin_material"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
