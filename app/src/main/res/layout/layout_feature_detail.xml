<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.MainActivity"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title"
        android:text="UI Preview"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        style="@style/TextAppearance.MaterialComponents.Headline5"
        android:layout_marginStart="@dimen/material_base"
        android:layout_marginTop="@dimen/material_base"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_detail"
        android:text="the Layout will be change after some...."
        style="@style/TextAppearance.MaterialComponents.Body1"
        android:textAlignment="center"
        android:layout_below="@id/tv_title"
        android:layout_marginEnd="@dimen/material_base"
        android:layout_marginTop="@dimen/material_base"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/large_margin"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/dv_preview"
        android:background="@android:drawable/divider_horizontal_bright"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_detail"/>

    <androidx.appcompat.widget.AppCompatRatingBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rb_preview"
        android:stepSize="5"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:layout_below="@id/dv_preview"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/large_margin"  />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/dv_rating"
        android:background="@android:drawable/divider_horizontal_bright"
        android:layout_marginBottom="@dimen/material_base"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/rb_preview"/>
</RelativeLayout>