<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@android:color/white">

    <include
        android:id="@+id/tb_settings"
        layout="@layout/layout_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_drawer_open"
        style="@style/IconButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="@dimen/margin_material"
        android:scaleType="center"
        android:src="@drawable/ic_menu"
        app:layout_constraintBottom_toBottomOf="@id/tb_settings"
        app:layout_constraintStart_toStartOf="@id/tb_settings"
        app:layout_constraintTop_toTopOf="@id/tb_settings" />

    <TextView
        android:id="@+id/tv_settings"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_material"
        android:text="@string/label_settings"
        app:layout_constraintBottom_toBottomOf="@id/btn_drawer_open"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/btn_drawer_open"
        app:layout_constraintTop_toTopOf="@id/btn_drawer_open" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nv_settings"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tb_settings"
        app:layout_constraintWidth_max="@dimen/width_minimum_and_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:id="@+id/fl_language">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_language_name"
                    style="@style/TextAppearance.MaterialComponents.Body1"
                    android:textStyle="bold"
                    android:alpha="0.80"
                    android:text="@string/label_language"
                    android:layout_marginStart="@dimen/margin_material"
                    android:layout_marginTop="@dimen/margin_material"
                    android:layout_marginBottom="@dimen/margin_material"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="@dimen/margin_small_material"
                    android:layout_marginEnd="@dimen/margin_small_material"
                    android:background="@android:drawable/divider_horizontal_bright"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/imv_language"
                    tools:srcCompat="@drawable/tmp_myanmar"
                    android:elevation="1dp"
                    android:scaleType="centerCrop"
                    android:layout_gravity="end|bottom"
                    android:layout_marginBottom="@dimen/margin_material"
                    android:layout_marginEnd="@dimen/margin_material"/>

            </FrameLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
