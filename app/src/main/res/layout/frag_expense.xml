<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ml_transaction"
    tools:context=".ui.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/layout_toolbar"
        android:id="@+id/tb_transaction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/btn_pop_back"
        style="@style/IconImageButton"
        android:src="@drawable/ic_back"
        android:tint="@android:color/darker_gray"
        android:layout_marginStart="@dimen/material_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tb_transaction"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_transactions"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginStart="@dimen/material_margin"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        android:text="@string/label_expense"
        app:layout_constraintTop_toTopOf="@id/btn_pop_back"
        app:layout_constraintBottom_toBottomOf="@id/btn_pop_back"
        app:layout_constraintStart_toEndOf="@+id/btn_pop_back"
        app:layout_constraintEnd_toEndOf="parent"/>
      <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:overScrollMode="never"
        android:scrollbars="vertical"
        android:paddingBottom="80dp"
        android:clipToPadding="false"
        app:layout_constraintWidth_max="450dp"
        app:layout_constraintTop_toBottomOf="@id/tb_transaction"
        android:id="@+id/rv_transactions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_expense" />
    <ProgressBar
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/pb_loading"
        android:visibility="gone"
        android:progressTint="@color/primaryColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tb_transaction"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <FrameLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/fl_confirm_delete"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:background="@color/backgroundColor"
        android:layout_height="?attr/actionBarSize">
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/btn_cancel_delete"
            style="@style/IconImageButton"
            android:src="@drawable/ic_close"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="@dimen/material_margin"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_confirm_delete"
            android:text="Confirm Delete"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_gravity="center"/>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/btn_done_delete"
            style="@style/IconImageButton"
            android:src="@drawable/ic_done"
            android:layout_marginEnd="@dimen/material_margin"
            android:layout_gravity="end|center_vertical"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="@android:drawable/divider_horizontal_bright"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
