<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ProExpense" parent="Base.Theme.ProExpense">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_light_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/blue_light_500</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/dark</item>
        <item name="rippleColor">@android:color/darker_gray</item>
        <item name="backgroundColor">@color/gray_200</item>
        <item name="colorPositive">@color/green_500</item>
        <item name="colorOnPositive">@color/gray_100</item>
        <item name="colorNegative">@color/red_400</item>
        <item name="colorOnNegative">@color/gray_100</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor" tools:targetApi="m">@android:color/transparent</item>
    </style>

    <style name="Theme.Splash" parent="Base.Theme.ProExpense">
        <item name="background">@color/blue_light_500</item>
        <item name="android:statusBarColor">@color/blue_light_500</item>
    </style>

    <color name="color_statistic_background">@color/gray_100</color>

</resources>
