<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/onPrimaryColor</item>
        <item name="rippleColor">@android:color/darker_gray</item>
        <item name="colorOnSurface">@color/onSurfaceColor</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="colorSurface">@color/surfaceColor</item>
    </style>

<!--    Splash Screen-->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/primaryColor</item>
    </style>

    <style name="RoundedShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">@dimen/corner_radius</item>
    </style>

    <style name="ImageCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:bottomLeftRadius">60dp</item>
    </style>

<!--    IconButton-->

    <style name="IconImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="tint">@color/iconColorTint</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="NavTheme" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearance">@style/TextAppearance.MaterialComponents.Subtitle2</item>
        <item name="itemTextColor">@color/nav_text</item>
        <item name="itemIconSize">20dp</item>
        <item name="itemHorizontalPadding">@dimen/material_margin_large</item>
    </style>

<!--    Material Tab-->
    <style name="MaterialTab" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/primaryColor</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabMaxWidth">100dp</item>
        <item name="tabGravity">center</item>
        <item name="tabUnboundedRipple">false</item>
        <item name="android:background">@color/backgroundColor</item>
    </style>
</resources>
