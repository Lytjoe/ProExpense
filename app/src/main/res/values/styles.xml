<resources>
    <!-- Base application theme. -->
    <style name="ShapeAppearance.ProExpense.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="Widget.ProExpense.NavigationView.Overlay" parent="">
        <item name="itemTextAppearance">?attr/subtitleTextAppearance</item>
        <item name="itemTextColor">@color/nav_text_color</item>
        <item name="itemIconSize">@dimen/size_nav_icon</item>
        <item name="iconTint">@color/darker_gray</item>
        <item name="android:background">?attr/colorSurface</item>
        <item name="itemHorizontalPadding">@dimen/grid_4</item>
    </style>

    <style name="Widget.ProExpense.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cornerSize">4dp</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>

    </style>

    <style name="Widget.ProExpense.IconButton" parent="Widget.MaterialComponents.Button">
        <item name="tint">@color/darker_gray</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="Widget.ProExpense.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:height">@dimen/height_button</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="TextAppearance.ProExpense.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:alpha">0.70</item>
    </style>

    <style name="TextAppearance.ProExpense.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:alpha">0.70</item>
    </style>

    <style name="TextAppearance.ProExpense.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:alpha">0.7</item>
    </style>

    <style name="ShapeAppearanceOverlay.ProExpense.Circular" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">27.5dp</item>
        <item name="borderWidth">2dp</item>
    </style>

</resources>
